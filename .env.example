# Environment Variables Template
# Copy this file to .env and fill in your values

# Betfair API
BETFAIR_USERNAME=your_betfair_username
BETFAIR_PASSWORD=your_betfair_password
BETFAIR_APP_KEY=your_delayed_app_key
BETFAIR_CERT_PATH=./certs/client-2048.crt
BETFAIR_KEY_PATH=./certs/client-2048.key

# API-Football (Free tier: 180 calls/hour)
API_FOOTBALL_KEY=your_api_football_key
API_FOOTBALL_BASE_URL=https://v3.football.api-sports.io

# TheOddsAPI (Free tier)
THE_ODDS_API_KEY=your_theodds_api_key
THE_ODDS_API_BASE_URL=https://api.the-odds-api.com/v4

# Database
DATABASE_URL=sqlite:///./beton.db
# For production: postgresql://user:password@localhost/beton

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Bankroll Settings
INITIAL_BANKROLL=1000.00
MAX_STAKE_PERCENTAGE=5.0
STOP_LOSS_PERCENTAGE=20.0

# Automation Settings
PAPER_TRADING_MODE=true
AUTO_BET_ENABLED=false
MIN_VALUE_EDGE=5.0

# Notifications (Optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
EMAIL_NOTIFICATIONS=false
